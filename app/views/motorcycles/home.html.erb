<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://specials-images.forbesimg.com/imageserve/5c09af4a31358e5b4338fbfb/960x0.jpg?cropX1=0&cropX2=5184&cropY1=410&cropY2=3175);">
  <div class="container">
    <h1>Rent a <strong>motorcycle</strong> anywhere <strong>in the world</strong>!</h1>
    <p>Book unforgettable bikes from trusted hosts around the globe</p>
    <div class="form-group row">
      <div class="col-sm-10">
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col">
          <%= form_tag motorcycles_path, html: { autocomplete: "off" }, method: :get do %>
            <%= text_field_tag :query,
                               params[:query],
                               autocomplete: 'off',
                               class: "form-control",
                               placeholder: "Location",
                               size: 40
            %>
            </div>
            <div class="col">
              <%#= date_field "start_date_input_id", "date_input_name", class: 'my_class' %>
              <%= date_field "date_start", "date_start", class: 'form-control' %>
            </div>
            <div class="col">
              <%= date_field "date_end", "date_end", class: 'form-control' %>
            </div>
            <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
          </div>
    </div>
  </div>
</div>

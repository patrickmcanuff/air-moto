<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100"  src= "<%= cl_image_path @motorcycle.photos[0].key, crop: :fill %>" alt="moto 2nd photo" >
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= cl_image_path @motorcycle.photos[1].key,crop: :fill %>" alt="moto 2nd photo" >
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= cl_image_path @motorcycle.photos[2].key, crop: :fill %>" alt="moto 3rd photo" >
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="col-md-6 offset-md-3 mt-5" style="margin:0 auto">
  <p><%= @motorcycle.brand %>
    <%= @motorcycle.model %></p>
  <p>Year: <%= @motorcycle.year %></p>
  <p>Location: <%= @motorcycle.location %></p>
  <p>Owner: <%= @motorcycle.user.name%></p>
</div>

<div>
  <% if current_user != @motorcycle.user %>
    <%= simple_form_for([@motorcycle, @booking]) do |f| %>
      <%= f.input :date_start, as: :date, html5: true,label: 'From' %>
      <%= f.input :date_end,as: :date, html5: true, label: 'To'  %>
      <%= f.button :submit, "Book this motorcycle", class: "btn btn-success" %>
    <% end %>
  <% end %>
</div>


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://s3.eu-west-1.amazonaws.com/cdn.motorbikemag.es/wp-content/uploads/2016/09/Yamaha-YZF-R1-2017-galeria-004-1100x470.jpg" alt="moto 1st photo" width="640" height="550">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://www.totalmotorcycle.com/wp-content/uploads/2020/10/2021-Yamaha-YZF-R1M1.jpg" alt="moto 2nd photo" width="640" height="550">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://cdn-tp3.mozu.com/27878-44719/cms/44719/files/495ac720-0223-4fe7-beab-33e885692ff4?quality=60&_mzcb=_1601037526840" alt="moto 3rd photo" width="640" height="550">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="col-md-6 offset-md-3 mt-5" style="margin:0 auto">
  <p><%= @motorcycle.brand %>
  <%= @motorcycle.model %></p>
  <p>Year: <%= @motorcycle.year %></p>
  <p>Location: <%= @motorcycle.location %></p>
  <p>Owner: <%= @motorcycle.user.name%></p>
</div>

<div class="text-center my-5">
  <%= link_to 'Book', new_booking_path, class: "btn btn-primary"%>
</div>
